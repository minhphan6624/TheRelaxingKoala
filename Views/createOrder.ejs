<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order - Relaxing Koala Restaurant</title>

    <link rel="stylesheet" href="css/order.css">
</head>
<body>
    <%- include('./Partials/navbar.ejs') %>
    <h1>Place an Order</h1>
    <form action="/customer/orders" method="post">
        <label for="customer_name">Customer Name:</label>
        <input type="text" id="customer_name" name="customer_name" required>

        <label for="order_type">Order Type:</label>
        <select id="order_type" name="order_type" required>
            <option value="dine-in">Dine-in</option>
            <option value="takeaway">Takeaway</option>
            <option value="delivery">Delivery</option>
        </select>

        <div id="delivery-fields" style="display: none;">
        <label for="delivery_address">Delivery Address:</label>
        <input type="text" id="delivery_address" name="delivery_address">
        </div>

        <!-- Add order items fields here -->

        <button type="submit">Place Order</button>
    </form>

    <%- include('./Partials/footer.ejs') %>
    <script>
    document.getElementById('order_type').addEventListener('change', function() {
        var orderType = this.value;
        document.getElementById('dine-in-fields').style.display = (orderType === 'dine-in') ? 'block' : 'none';
        document.getElementById('delivery-fields').style.display = (orderType === 'delivery') ? 'block' : 'none';
    });
    </script>
</body>
</html>
